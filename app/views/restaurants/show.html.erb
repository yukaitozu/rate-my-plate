<div class="container">
  <div class="restaurant-info">
    <h2><%= @restaurant.name %></h2>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.rating %></p>
  </div>

  <div class="plate-list">
    <ul>
      <% @restaurant.plates.each do |plate| %>
        <p><%= plate.name %> | <%= plate.rating %></p>
      <% end %>
    </ul>
  </div>

  <div class="action">
    <%= link_to "Add a New Plate", new_restaurant_plate_path(@restaurant), class: 'btn btn-primary' %>
  </div>

</div>
